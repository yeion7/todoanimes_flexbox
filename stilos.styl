
$bg-page = #2D3E50
$bg-bar = #1E2936

$bg-light = #ECF0F1
$bg-blue = #2886D2
$bg-blue1 = #1E2936
$bg-blue2 = darken($bg-blue1, 30%)

$link-light = #fff
$link-dark = #748496

*
     box-sizing border-box
     transition all .2s
     
html body
    margin 0
    padding 0
    font-size: 16px
   
    font-family: 'Open Sans', sans-serif
    background $bg-page
ul
    list-style none
    
a
        cursor pointer
        text-transform uppercase
        text-decoration none
        color $link-dark
        font-weight 700
        font-size 12px
        display block

// Estilos Header - Navegacion

.navegation
    height 41px
    background $bg-bar
    display: flex
    justify-content space-between
    align-items center
    border-bottom: 1px solid #11171E;
    box-shadow: 0 20px 50px rgba(0,0,0,.20);
    
    &-items
        padding 0 15px 
        margin 0 22px
        display flex
        
    &-item
        flex auto
        font-size .8em
        padding 0 .5em
        box-sizing border-box
        text-align center
        
    &-items :nth-child(1)
        padding-left 0
        
    &-item a
        line-height 41px

    &-item a:hover
        color white
        
    &-title a
        font-size .8em
        line-height 41px
        padding-right 14px
        margin-right 22px
        text-transform capitalize
        text-decoration none
        color $link-light
    
    @media screen and (max-width: 601px)
        flex-direction: column-reverse
        height 81px

        &-title 
            margin 0

.logo
    display flex
    align-items center
    height 131px
    
    @media screen and (max-width: 801px)
        justify-content center
        
    &-container
        margin 0 22px
        padding 0 15px
        

.search 
    height 139px
    margin 0 22px
    padding 0 15px
    margin-bottom 20px
    

    &-container
        height 140px
        background $bg-light
        border-radius 8px
        display: flex
        flex-direction: column
        justify-content: space-around
        
    &-tags
        background $bg-blue
        display flex
        align-items flex-end
        height 50%
        margin 0
        padding 0 14px
        border-radius 8px 8px 0 0 
        & i
            display none
    
    &-tag
        background   darken($bg-blue,20%)
        border-radius 5px 5px 0 0
        margin-right 10px
            
    &-tag a
        line-height 50px
        color $link-light
        padding 0 1em
        
        &:active
            border-radius 5px 5px 0 0
            background $bg-light
            color $link-dark

    @media screen and (max-width: 601px)
        &-tags i
            display block
            font-size 1.5em
            padding .8em
        &-tag a span
            display none

    
    &-buttom
        height 50%
        display flex
        justify-content center
        align-items center
        padding 14px

    &-input
        flex 80
        min-height 40px
        line-height 20px
        background-color $bg-light
        width 100%
        border: 1px solid #E8ECED;
        border-right none
        border-radius 30px 0 0 30px;
        box-shadow 0 0 10px rgba(0,0,0,.05)
        padding 9px 14px
        
    &-button 
        flex 10
        min-height 40px
        background-color $bg-light
        color $link-dark
        border: 1px solid #E8ECED
        border-radius 0 30px 30px 0
        border-left none
        box-shadow 0 0 10px rgba(0,0,0,.05)
        
        &:hover
            color darken(lightblue, 30%)
    

//fin estilos navegacion - header

.video
    margin 0 22px
    padding 0 15px
    display flex
    flex-direction column
    
.capitulo
    margin-bottom 20px
    
    &-container
        display flex
        flex-direction column
        
    &-titulo
        height 55px
        background $bg-blue2
        display flex
        justify-content center
        align-items center
        border-radius 8px 8px 0 0
        
        & a
            padding 1em
            text-transform capitalize 
            font-size 1.1em
            margin-bottom 0
            
    &-opciones
        height 55px
        background $bg-blue1
        border-radius 0 0 8px 8px
        padding 14px
        display flex
        justify-content space-around
        align-items center
        & a
            padding 1em

    &-anterior
        display flex
        align-items center
        & i 
            font-size 2em
            color $link-light
            margin-right 10px
            &:hover
                color $bg-blue
        & span
            line-height 3em
            color $link-light
            display block
            
    &-lista
        display flex
        align-items center
        
        & i 
            font-size 2em
            color $link-light
            margin-right 10px
            &:hover
                color $bg-blue
            
        & span
            color $link-light
            display block
            line-height 3em
            
    &-siguiente
        display flex
        align-items center
        
        & i 
            font-size 2em
            color $link-light
            margin-right 10px
            &:hover
                color $bg-blue
        & span
            line-height 3em
            color $link-light
            display block
    
    @media screen and (max-width: 801px) 
        &-opciones span
            display none
        &-opciones i
            font-size 3em
            
.repro
    
    display flex
    flex-direction column

    &-fuentes
        margin 0
        padding 0
        background $bg-page
        display flex
        
    &-fuente
        margin-right 5px
        padding 0 10px
        border-radius 5px 5px 0 0 
        line-height 2em
        background $bg-blue2
        
        @media screen and (max-width: 801px) 
            span
                display none
            
            a
                padding 1em
        
        & a
            color $link-light
            padding .5em
            
        &:active
            background $bg-blue1
        
    &-insert
        background $bg-blue1
        width 100%
        min-height 85vh
        border-radius 0 8px 0 0 
        padding 14px
        display flex
    
    &-video
        background-color black
        flex 1 1 100%
        

    &-calificacion
        background $bg-blue2
        height 50px
        display flex
        justify-content space-between
        align-items center
        padding 0 14px
        margin-bottom 20px
        border-radius 0 0 8px 8px
        
        @media screen and (max-width: 801px) 
            flex-direction column
            align-items: flex-start;
        
    &-puntuacioncontainer
        display flex
        align-items center
        
    &-puntuacion
        margin-right 10px
        background $bg-blue
        padding 8px
        
        & span 
            font-size 2em
            color $link-light
            font-weight bold
            height 100%
            
    &-estrellas
        display flex
        flex-direction column
        justify-content star-flex
        align-items star-flex
        
        & span
            padding-top 3px
            line-height 1em
            color $link-light
            text-transform uppercase
            font-size: .7em

        & i
            color $bg-blue
            font-size 1.3em
            
            &:hover
                color $bg-blue1

    &-compartircontainer
        background darken($bg-blue1, 50%)
        border-radius 15px
        line-height 1.5em
        width 40%
        padding 5px 10px
        
        & i 
            margin-right 5px
            color $bg-blue
        
        & a
            color $link-light
            
        @media screen and (max-width: 801px) 
            margin 10px 0
            width 100%
            padding 0 10px

.descargar
    border-radius 8px
    margin-bottom 20px
    width 100%
    height 131px
    background $bg-blue2
    
    @media screen and (max-width: 801px) 
            margin-top 25px
            
    &-tabla
        color $link-light
        text-align center
        width 100%
        border-collapse: collapse;
    
    &-titulotabla
        padding 15px
        font-size 1.3em
        line-heigth 2em
        
    &-titulocolumnas
        background darken($bg-blue1, 50%)
        display table-header-group
        vertical-align middle
        
        @media screen and (max-width: 601px) 
            & th:nth-child(2)
                display none
            & th:nth-child(3)
                display none

        & tr th
                padding 5px 15px
                font-weight 700
    &-items 
        display table-header-group
        vertical-align middle
        @media screen and (max-width: 601px) 
            & td:nth-child(2)
                display none
            & td:nth-child(3)
                display none
                
        & td
            padding 15px
            & a
                padding .5em
                border-radius 16px
                color $link-light
                background $bg-blue
                display inline
     
.comentarios
    heigth 225px
    width 100%
    margin-bottom 10px
    display flex
    flex-direction column
    border-radius 8px
    background $bg-light
    
    
    &-title
        background $bg-blue
        border-radius 8px 8px 0 0
        height 50px
        padding 14px
        
        & span
            text-transform capitalize
            color $link-light
            font-size 1.3em
            line-height 30px
    &-container
        display flex
        height 185px
        padding 14px
        
        & img
            height 60px
            widht 60px
            margin 5px
            border-radius 50%
            box-shadow 0 0 0 5px #fff
            flex none
            
            @media screen and (max-width: 601px) 
                display none
        
        & form
            margin-left 10px
            display flex
            flex-direction column
            justify-content flex-start
            flex 1 1 90%
            
            & textarea
                border-radius 5px
                max-height 80px
                overflow auto
                resize none
                padding 9px 14px
                border 1px solid #E8ECED
                width 100%
            & button
                margin-top 5px
                align-self flex-start
                display block
                padding: 5px 15px;
                line-height: 30px;
                font-weight: 700;
                text-align: center;
                border-radius: 5px;
                background-color: $bg-blue1;
                color: $link-light;
                text-transform: uppercase;

footer
    background $bg-bar
    border-bottom 5px solid #11171E
    border-top: 1px solid #2D3E50;
    box-shadow: 0 -20px 50px rgba(0,0,0,.20);
    padding 30px 0 10px 0

.footercontainer
    margin 0 22px
    padding 0 15px
    display flex
    width 100%
    
    @media screen and (max-width:1001px) 
        flex-direction column

.prox
    flex 1 1 50%
    display flex
    flex-direction: column
    align-items: flex-start
    justify-content flex-start
    
   
    &-titulo
        color $link-light
        border-bottom: 1px solid #18212B;
        width: 90%
        align-self baseline
        height 1.5em
        
        & span
            border-bottom: 1px solid $bg-blue;
            padding-bottom .5em
    
    &-series
        padding-left 0
        display flex
        flex-wrap: wrap
        
        @media screen and (max-width:1001px) 
            flex-direction column
            width 90%
    
    &-serie
        width 45%
        background #18212B
        margin .2em
        border-radius 5px
        font-size .8em
        display flex
        justify-content space-between
        align-items center
        
        @media screen and (max-width:1001px) 
            width 100%
        
        
        & a
            display inline-block
            color $link-light
            padding 1em 7em 1em 1em
            overflow hidden
            text-transform capitalize
            font-size 11px
            font-weight: 300

        & span
            display inline-block
            color #394E67
            margin-right 5px
            
            
.creditos
    flex 1 1 50%
    display flex
    flex-direction column
    justify-content flex-start
    align-items: flex-start

    &-titulo
        color $link-light
        border-bottom: 1px solid #18212B;
        width: 90%
        align-self baseline
        height 1.5em
        
        & span
            border-bottom: 1px solid $bg-blue;
            padding-bottom .5em
        
    &-container
        margin-top 1em
        display flex
        @media screen and (max-width:1001px) 
            flex-direction column
            align-items center
      
        
    &-logos
        display flex
        flex-direction column
        
        & i
            font-size: 2em
            padding 20px 7px
            color #394E67
            
    &-legal
        display flex
        flex-direction column
        padding-left 5px
        color #666
        font-size: .8em
        padding-left 25
        
        @media screen and (max-width:1001px) 
            align-items center

        & span
            margin 5px
            width 90%
            &:first-child
                text-align center
        & a
            display inline-block